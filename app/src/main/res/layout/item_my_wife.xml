<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="holder"
            type="com.duynam.journeys.view.media.WifeHolder" />

        <variable
            name="loadimage"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:cardElevation="@dimen/size_5"
            app:cardCornerRadius="@dimen/size_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardMaxElevation="@dimen/size_5">

            <com.duynam.journeys.ui.Custorm
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bbb"
                android:scaleType="centerCrop"
                android:id="@+id/img_my_wife"
                image="@{loadimage}"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>